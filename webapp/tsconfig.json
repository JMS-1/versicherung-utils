{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "../dist",
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "ES2022"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
